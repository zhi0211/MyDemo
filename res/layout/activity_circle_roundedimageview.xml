<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.gxz.mydemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CircleRoundedImageViewActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <org.gxz.mydemo.img.circleimage.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:src="@drawable/image_bg"
            app:border_color="@color/border"
            app:border_width="1dip"
            app:corner_radius="10dp"
            app:mutate_background="true"
            app:oval="false" />

        <org.gxz.mydemo.img.circleimage.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@drawable/image_bg"
            app:border_color="@color/border"
            app:border_width="1dip"
            app:corner_radius="20dp"
            app:mutate_background="true"
            app:oval="false" />

        <org.gxz.mydemo.img.circleimage.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@drawable/image_bg"
            app:border_color="@color/border"
            app:border_width="1dip"
            app:corner_radius="30dp"
            app:mutate_background="true"
            app:oval="false" />

        <org.gxz.mydemo.img.circleimage.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@drawable/image_bg"
            app:border_color="@color/border"
            app:border_width="1dip"
            app:corner_radius="40dp"
            app:mutate_background="true"
            app:oval="false" />
        
        <org.gxz.mydemo.img.circleimage.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            android:src="@drawable/image_bg"
            app:border_color="@color/border"
            app:border_width="1dip"
            app:corner_radius="50dp"
            app:mutate_background="true"
            app:oval="false" />
    </LinearLayout>

</ScrollView>