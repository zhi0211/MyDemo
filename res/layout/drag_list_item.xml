<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/drag_item_img"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/default_telephone" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/drag_list_item_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="asdfasdf"
            android:textColor="#000000"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/drag_item_state"
            android:layout_marginRight="10dp" 
            android:src="@drawable/icon_wifi_normal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

         <TextView
            android:id="@+id/btn_clear_lock"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="解禁"
            android:textColor="@android:color/background_light" />
        <TextView
            android:id="@+id/btn_forever"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="永久"
            android:textColor="@android:color/background_light" />

        <View
            android:layout_width="1dp"
            android:id="@+id/right_divide"
            android:layout_height="fill_parent"
            android:background="@android:color/background_light" />

        <TextView
            android:id="@+id/btn_temp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="临时"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</LinearLayout>