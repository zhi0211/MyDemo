<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical">


	<org.gxz.mydemo.loading.whorl.WhorlView
		android:id="@+id/whorlView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:whorlview_circle_colors="@string/whorlview_colors"
		app:whorlview_circle_speed="360"
		app:whorlview_parallax="fast"
		app:whorlview_strokeWidth="8"
		app:whorlview_sweepAngle="10"/>


	<org.gxz.mydemo.loading.whorl.WhorlView
		android:layout_marginTop="30dp"
		android:id="@+id/whorlView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:whorlview_circle_colors="@string/whorlview_colors"
		app:whorlview_circle_speed="360"
		app:whorlview_parallax="fast"
		app:whorlview_strokeWidth="16"
		app:whorlview_sweepAngle="50"/>

</LinearLayout>