<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyProgressActivity" >

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress_rotate" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminateDrawable="@drawable/appwidget_progress" />

    <ProgressBar
        android:id="@+id/progressBar4"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_marginLeft="30dp"
        android:indeterminateDrawable="@drawable/progress_rotate1" />

    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_marginLeft="40dip"
        android:indeterminateDrawable="@drawable/progress_list" />

    <ProgressBar
        android:id="@+id/ProgressBar5"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginLeft="60dp"
        android:indeterminateDrawable="@drawable/progress_list2" />

    <ProgressBar
        android:id="@+id/ProgressBar6"
        style="@style/ProgressBar_Mini"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:progress="30"
        android:progressDrawable="@drawable/progressbar_horizontal_style_one" />

    <ProgressBar
        android:id="@+id/ProgressBar7"
        style="@style/ProgressBar_Mini"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:progress="45"
        android:progressDrawable="@drawable/progressbar_horizontal_style_two" />

    <ProgressBar
        android:id="@+id/ProgressBar8"
        style="@style/ProgressBar_Mini"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:progress="60"
        android:progressDrawable="@drawable/progressbar_horizontal_style_three" />

    <ProgressBar
        android:id="@+id/ProgressBar9"
        style="@style/ProgressBar_Mini"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:progress="75"
        android:progressDrawable="@drawable/progressbar_horizontal_style_four" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progressBar10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress_rotate2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Start" />
        
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Stop" />
    </LinearLayout>

</LinearLayout>